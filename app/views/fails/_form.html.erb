<%= simple_form_for(@fail) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description, as: :text, input_html: {rows: "3" } %>
    <%= f.input :lesson, as: :text, input_html: {rows: "3" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
