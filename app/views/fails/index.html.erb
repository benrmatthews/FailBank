<div class="row">
  
  <p id="notice"><%= notice %></p>
  
  <div class="col-md-3">
    <br />
    <img class="img-circle" src="data:image/png;base64," data-src="holder.js/140x140" alt="140x140" style="width: 140px; height: 140px;">
    <br />
    <h3>User Name</h3>
  </div>
  
  <div class="col-md-6">
    
    <h1>Listing Fails</h1><br />

<% @fails.each do |fail| %>
<div class="col-md-12">
  <h3>
    <span class="content"><%= link_to fail.name, fail %></span>
  </h3>
  <span class="timestamp">
    Shared <%= time_ago_in_words(fail.created_at) %> ago by <%= link_to fail.user.name, fail.user %><br>
    Tags: <%= raw fail.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
    <br />
  </span>
  <br />
</div>
<% end %>

